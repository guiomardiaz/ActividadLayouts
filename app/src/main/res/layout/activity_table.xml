<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Table">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="143dp"
            android:layout_height="61dp"
            android:onClick="boton1"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="129dp"
            android:layout_height="match_parent"
            android:onClick="boton2"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="141dp"
            android:layout_height="61dp"
            android:onClick="boton3"
            android:text="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton4"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton5"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton6"
            android:text="6" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton7"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton8"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:onClick="boton9"
            android:text="9" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn0"
            android:layout_width="218dp"
            android:layout_height="61dp"
            android:layout_span="2"
            android:onClick="boton0"
            android:text="0" />

    </TableRow>

    <TableRow
        android:layout_width="283dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <EditText
            android:id="@+id/txt1"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </TableRow>

</TableLayout>